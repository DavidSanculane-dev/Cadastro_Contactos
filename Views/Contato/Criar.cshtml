@model ContatoModel
@{
    ViewData["Title"] = "Criar novo contacto";
}

<h1>Criar novo contacto</h1>

<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Nome</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Escreva o nome">
</div>
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Endereço</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Escreva o endereço">
</div>
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Contacto</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Escreva o contacto">
</div>
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Email</label>
    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
</div>

<div class="d-grid gap-2">
    <button class="btn btn-success" type="submit">Salvar</button>
    <a class="btn btn-danger" asp-controller="Contato" asp-action="Index" type="button">Cancelar</a>
</div>


